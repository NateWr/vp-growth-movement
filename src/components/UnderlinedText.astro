---
import SvgUnderlineLg from '../images/underline-lg.svg'

interface Props {
  lineClass?: string;
  hoverEffect?: boolean;
  rotateDir?: boolean;
  underlineOnHover?: boolean;
}

const { lineClass, hoverEffect = true, rotateDir = false, underlineOnHover = false } = Astro.props
---

<div
  class={`
    group
    relative
    inline-flex
    flex-col
    items-center
    transition-all
    ${
      hoverEffect
        ? `hover:-translate-y-1 ${rotateDir ? 'hover:rotate-2' : 'hover:-rotate-2'}`
        : ''
    }
    focus-visible:outline-2
    focus-visible:outline-current
  `}
>
  <slot />
  <SvgUnderlineLg
    class={`
      absolute
      top-full
      left-0
      right-0
      w-full
      h-0.5
      ${underlineOnHover ? 'opacity-0 group-hover:opacity-100' : ''}
      ${lineClass}
    `}
    aria-hidden="true"
  />
</div>